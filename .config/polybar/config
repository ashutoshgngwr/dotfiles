[module/cpu-core-temp]
type = custom/script
exec = sensors | grep Core | awk '{print substr($3, 2, length($3)-5)}' | tr "\\n" " " | sed 's/ /°C  /g' | sed 's/  $//'
interval = 5
label = %output%
label-font = 0
format = <label>

